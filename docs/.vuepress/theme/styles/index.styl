$red-4 = #B53232
$red-5 = #B02020
$red-6 = #A51111
$orange-1 = #FFA800
$orange-2 = #FF9900
$orange-3 = #FF8A00
$orange-4 = #FF7A00
$orange-5 = #FF5C00
$orange-6 = #FF4D00
$green-1 = #20BF5F
$green-2 = #12AB4F
$green-3 = #00983C
$green-4 = #00983C
$green-5 = #006E33
$green-6 = #005829
$midnight-1 = #000935
$midnight-2 = #04104B
$midnight-3 = #000F5F
$midnight-4 = #001377
$midnight-5 = #030091
$midnight-6 = #0300AE
$dark-1 = #161619
$dark-2 = #232327
